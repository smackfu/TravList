<div title="Account login" id="loginform" class="form">
<h3>Please login:</h3>

<% if @flash['notice'] %>
 <div id="ErrorExplanation"><%= @flash['notice'] %></div>
<% end %>

<div class="boxouter">
<h3>Current Users</h3>
<div class="box">
<%= render_partial 'account/login' %>
</div>
</div>

<div class="boxouter">
<h3>New Users</h3>
<div class="box">
<%= render_partial 'account/signup' %>
</div>
</div>

</div>

